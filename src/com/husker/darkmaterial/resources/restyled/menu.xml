<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.menu.WebMenu -->

    <!-- Menu -->
    <style type="menu">
        <component>
            <opaque>false</opaque>
        </component>
        <painter>
            <decorations>
                <decoration states="menubar">
                    <WebShape round="0" />
                    <MenuItemLayout padding="4,4,4,6" iconTextGap="6" textArrowGap="10">
                        <ButtonIcon constraints="icon" />
                        <ButtonText constraints="text" color="210,210,210" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="menubar,enabled,hover">
					<ColorBackground color="55,55,55"/>
                </decoration>
                <decoration states="popupmenu">
                    <WebShape round="0" />
                    <MenuItemLayout padding="5,10,5,6" iconTextGap="6" textArrowGap="10">
                        <ButtonIcon constraints="icon" />
                        <ButtonText constraints="text" color="210,210,210" />
                        <SetIcon id="arrow" constraints="arrow" icon="right" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="popupmenu,rtl">
                    <MenuItemLayout>
                        <SetIcon id="arrow" icon="left" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="selected">
					<ColorBackground color="55,55,55"/>
                </decoration>
                <decoration states="disabled">
                    <MenuItemLayout>
                        <ButtonText color="160,160,160" />
                    </MenuItemLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>