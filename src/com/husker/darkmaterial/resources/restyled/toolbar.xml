<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.toolbar.WebToolBar -->

    <!-- Toolbar -->
    <style type="toolbar" padding="2">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="6" />
					<WebShadow type="outer" width="2" opacity="0"/>
                    <LineBorder color="40,40,40" />
					<ColorBackground color="60,60,60"/>
                </decoration>
                <decoration states="floating">
                    <WebShape sides="0,0,0,0" />
                </decoration>
                <decoration states="disabled">
                    <LineBorder color="60,60,60" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Attached toolbar -->
    <style type="toolbar" id="attached">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="0" />
                </decoration>
            </decorations>
        </painter>
    </style>
    <style type="toolbar" id="attached-north" extends="attached">
        <painter>
            <decorations>
                <decoration>
                    <WebShape sides="0,0,1,0" />
                </decoration>
            </decorations>
        </painter>
    </style>
    <style type="toolbar" id="attached-west" extends="attached">
        <painter>
            <decorations>
                <decoration>
                    <WebShape sides="0,0,0,1" />
                </decoration>
            </decorations>
        </painter>
    </style>
    <style type="toolbar" id="attached-east" extends="attached">
        <painter>
            <decorations>
                <decoration>
                    <WebShape sides="0,1,0,0" />
                </decoration>
            </decorations>
        </painter>
    </style>
    <style type="toolbar" id="attached-south" extends="attached">
        <painter>
            <decorations>
                <decoration>
                    <WebShape sides="1,0,0,0" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Undecorated toolbar -->
    <style type="toolbar" id="undecorated">
        <painter>
            <decorations>
                <decoration visible="false" />
            </decorations>
        </painter>
    </style>

</skin>