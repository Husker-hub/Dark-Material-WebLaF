<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.button.WebToggleButton -->

    <!-- Toggle button -->
    <style type="togglebutton" padding="2,4,2,4">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="3" />
                    <LineBorder color="40,40,40" />
					<ColorBackground color="80,80,80"/>
                    <ButtonLayout>
                        <ButtonIcon constraints="icon" />
                        <ButtonText constraints="text" color="220,220,220" />
                    </ButtonLayout>
                </decoration>
                <decoration states="selected">
                    <ColorBackground color="60,60,60" />
                </decoration>
                <decoration states="focused">
                    <LineBorder color="black" />
                </decoration>
                <decoration states="pressed">
                    <ColorBackground color="57,61,63" />
                </decoration>
                <decoration states="disabled">
                    <LineBorder color="68,72,74" />
                    <ButtonLayout>
                        <ButtonText color="180,180,180" />
                    </ButtonLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Toggle button supporting styled text -->
    <style type="togglebutton" id="styled">
        <painter>
            <decorations>
                <decoration>
                    <ButtonLayout>
                        <StyledButtonText constraints="text" color="245,245,245" />
                    </ButtonLayout>
                </decoration>
                <decoration states="disabled">
                    <ButtonLayout>
                        <StyledButtonText color="180,180,180" ignoreStyleColors="true" />
                    </ButtonLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Icon-only toggle button -->
    <style type="togglebutton" id="icon" padding="2">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="2" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Hover-decorated-only toggle button -->
    <style type="togglebutton" id="hover">
        <painter>
            <decorations>
                <decoration opacity="0" />
                <decoration states="focused">
                    <LineBorder color="black" />
                </decoration>
                <decoration states="enabled,hover" opacity="1" />
                <decoration states="enabled,pressed" opacity="1" />
                <decoration states="selected" opacity="1" />
            </decorations>
        </painter>
    </style>

    <!-- Icon-only and hover-decorated-only toggle button -->
    <style type="togglebutton" id="icon-hover" extends="icon">
        <painter>
            <decorations>
                <decoration opacity="0" />
                <decoration states="focused">
                    <LineBorder color="black" />
                </decoration>
                <decoration states="enabled,hover" opacity="1" />
                <decoration states="enabled,pressed" opacity="1" />
                <decoration states="selected" opacity="1" />
            </decorations>
        </painter>
    </style>

    <!-- Undecorated toggle button -->
    <style type="togglebutton" id="undecorated" padding="0">
        <painter>
            <decorations>
                <decoration visible="false" />
            </decorations>
        </painter>
    </style>

</skin>